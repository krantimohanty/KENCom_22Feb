            android:layout_centerInParent="true"
            android:visibility="visible"
            android:clickable="false"/>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/landing_page_logo_inner_width"
            android:layout_height="@dimen/landing_page_logo_inner_width"
            android:src="@drawable/inner_logo"
            android:layout_centerInParent="true"
            android:clickable="false"/>-->


        <ImageView
            android:id="@+id/img_mainproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/landing_mainproduct"
            android:layout_centerInParent="true"
            android:clickable="false"/>


    </RelativeLayout>
</RelativeLayout>